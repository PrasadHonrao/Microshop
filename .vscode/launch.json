{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "ProductMicroserviceApplication",
            "request": "launch",
            "mainClass": "com.microshop.microservice.product.ProductMicroserviceApplication",
            "projectName": "microservices.product"
        },
        {
            "type": "java",
            "name": "Application",
            "request": "launch",
            "mainClass": "com.microshop.microservices.product.Application"
        },
        {
            "type": "java",
            "name": "InventoryMicroserviceApplication",
            "request": "launch",
            "mainClass": "com.microshop.microservice.inventory.InventoryMicroserviceApplication",
            "projectName": "inventory-microservice"
        },
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/services/customer/Customer.MicroService.Tests/bin/Debug/net7.0/Customer.MicroService.Tests.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/services/customer/Customer.MicroService.Tests",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
